{
    "version": 2,
    "builds": [
        {
            "src": "app/Backend/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "app/frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/app/Backend/server.js"
        },
        {
            "src": "/auth/(.*)",
            "dest": "/app/Backend/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/app/frontend/$1"
        }
    ]
}
